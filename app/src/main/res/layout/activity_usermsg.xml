<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".UsermsgActivity">

    <!-- 全圆角-->
    <LinearLayout
        style="@style/wrap_layout">

        <LinearLayout
            android:id="@+id/lyt_um_head"
            style="@style/single_layout">

            <TextView
                android:text="头像"
                style="@style/usertext" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_um_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:padding="2dp"
                android:src="@mipmap/ic_launcher_round"
                app:riv_border_color="@color/colorPrimary"
                app:riv_border_width="2dp"
                app:riv_oval="true"/>
            <ImageView style="@style/img_arrow" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/wrap_layout" >
                 <!-- 上圆角-->
                 <LinearLayout
                     android:id="@+id/lyt_um_nikname"
                     style="@style/top_layout">

                     <TextView
                         android:text="昵称"
                         style="@style/usertext" />
                     <TextView
                         android:id="@+id/tv_um_nikname"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="nickname"/>
                       <ImageView style="@style/img_arrow"/>

                 </LinearLayout>

                 <!-- 分割线 -->
                   <View
                       style="@style/bg_line"/>
                   <!-- 无圆角-->
                <LinearLayout
                    android:id="@+id/lyt_um_email"
                    style="@style/mid_layout">

                    <TextView
                        android:text="邮箱"
                        style="@style/usertext" />
                    <TextView
                        android:id="@+id/tv_um_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="email"/>
                    <ImageView
                        style="@style/img_arrow"/>

                 </LinearLayout>

                      <View
                          style="@style/bg_line"/>
                   <!-- 下圆角-->
                <LinearLayout
                    android:id="@+id/lyt_um_intro"
                    style="@style/bottom_layout">
                    <TextView
                        android:text="个性签名"
                        style="@style/usertext" />
                    <TextView
                        android:id="@+id/tv_um_intro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="introduction"/>
                    <ImageView style="@style/img_arrow"/>

                 </LinearLayout>

             </LinearLayout>




</LinearLayout>